---
import { Image } from "@astrojs/image/components";
import CTA from "../CTA/CTA.astro";
import Circle from "../svg/Circle.astro";
import Dots from "../svg/Dots.astro";
import Polygon from "../svg/Polygon.astro";


export interface Props {
  title: string
  description: string
  image: string
}

const {
  title,
  description,
  image,
} = Astro.props;

---

<section
  class="relative container grid grid-rows-1 grid-cols-1 md:grid-cols-2"
  id="hero">

    <!-- TEXT -->
    <div class="flex flex-col justify-center md:pr-20">
      <CTA
        buttonEvent="contact"
        buttonText="לרכישת כרטיסים"
        description={description}
        title={title}
      />
    </div>
    <!-- END TEXT -->

    <Dots />

    <!-- IMAGE -->
    <div class="relative md:ml-2 mr-[-1.5rem]">
      <div class="rounded-es-[100px] overflow-hidden">
        <Image
          alt={title}
          class="float-right"
          format="webp"
          height={480}
          src={image}
          width={714}
        />
      </div>
      <div
        class={"fill-gust absolute flex z-[-1] " +
                "top-[-64px] end-0 " +
                "md:top-0 md:start-[-64px] md:end-auto " +
                "lg:top-0"}>
        <Circle />
      </div>
      <div
        class={"fill-rameo absolute z-[-1] " +
                "bottom-[-48px] end-6 " +
                "md:bottom-0 " +
                "lg:end-4"}>
        <Polygon />
      </div>
    </div>
    <!-- END IMAGE -->

</section>
