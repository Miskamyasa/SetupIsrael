---
import type { Service } from "../../dto/types"
import SmallCircle from "../svg/SmallCircle.astro"

export type Props = Service

const {
  slug,
  title,
  description,
}: Props = Astro.props

const audience = Astro.props.audience[0]

---

<div class="service-card flex flex-col justify-center items-center p-10 text-center">
  <div class={`fill-${audience} p-6 rounded-[2rem] bg-${audience} mb-7`}>
    <SmallCircle />
  </div>
  <h3 class="mb-4">{title}</h3>
  <p class="">{description}</p>
</div>

<style>
  .service-card {
    background-color: white;
    border-radius: 3rem;
    box-shadow: 0px 0.8rem 4rem 0px rgba(0, 0, 0, 0.05);
    min-height: 25rem;
    min-width: 20rem;
  }
</style>
