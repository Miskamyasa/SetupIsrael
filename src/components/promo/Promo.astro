---
import type { AvailableEvents } from "../../features/events"
import CTA from "../CTA/CTA.astro"
import Circle from "../svg/Circle.astro"
import Polygon from "../svg/Polygon.astro"

export interface Props {
  title: string
  description: string
  cta: string
  ctaEvent: AvailableEvents
}

const { title, description, cta, ctaEvent } = Astro.props
---

<section
  class="container grid grid-rows-1 grid-cols-1 md:grid-cols-2 gap-10 md:gap-20"
  id="promo"
>
  <!-- VIDEO -->
  <div class="relative pb-[56.25%] h-0">
    <!-- <iframe
      allowfullscreen
      allow="autoplay; encrypted-media; picture-in-picture; web-share"
      class="absolute top-0 left-0 w-full h-full rounded-[2.25rem]"
      src={src}
      title="YouTube video player"></iframe> -->

    <div
      class={"fill-rameo absolute bottom-[-64px] right-0 z-[-1] "
        + "md:right-[-32px] md:bottom-[-5px] lg:right-[-53px]"}
    >
      <Circle />
    </div>
  </div>
  <!-- END VIDEO -->

  <!-- TEXT -->
  <div class="relative md:px-5">
    <CTA
      buttonEvent={ctaEvent}
      buttonText={cta}
      description={description}
      title={title}
    />

    <div class="fill-meraki absolute left-[-1.5rem] top-0 z-[-1]">
      <Polygon />
    </div>
  </div>
  <!-- END TEXT -->
</section>
