---
import "./global.css";
import "@fontsource/rubik/variable.css";

import { useTranslations } from "../../features/i18n";
import PartytownScripts from "../partytown/Partytown.astro";
import SchemaOrg from "../schemes/SchemaOrg.astro";

import Footer from "./Footer.astro";
import Head from "./Head.astro";
import Header from "./Header.astro";

const { lang } = useTranslations(Astro.url);

---

<!DOCTYPE html>
<html
  dir={lang === "he" ? "rtl" : "ltr"}
  lang={lang}>

  <!-- <Head /> -->

  <body class="body min-h-screen w-screen flex flex-col overflow-x-hidden antialiased">

    <Header />

    <div class="flex-grow">
      <slot />
    </div>

    <Footer />

    <!-- partytown https://partytown.builder.io/ -->
    <PartytownScripts />

    <!-- Schema https://schema.org -->
    <SchemaOrg />
  </body>
</html>
