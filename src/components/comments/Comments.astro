---
import CTA from "../CTA/CTA.astro";
import CommentsSlider from "./CommentsSlider.tsx";

export interface Props {
  title: string;
  description: string;
}

const { title, description }: Props = Astro.props;
---

<section class="container">
  <div class="flex flex-col items-center">
    <CTA description={description} title={title} />
  </div>
  <!--  Slider -->
  <div class="w-full">
    <CommentsSlider client:load />
  </div>
</section>

