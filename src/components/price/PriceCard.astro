---
import Button from '../buttons/Button';
import type { Price } from '../../dto/types';
import CTA from '../CTA/CTA.astro';
export type Props = Price;

const { slug, price, title, description, bulets }: Props = Astro.props;
---

<Fragment>
  <div
    class="price-card flex flex-col  p-10 "
  >
  <div class="text-5xl font-bold">
    <span class="item__value">60<sup class="item__currency">&#8362</sup></span>
  </div>
  <div class="cta">
      <CTA
        description={description}
        title={title}
        buttonText={'Book time slot'}
      />
      {bulets.map((bulet) => <p class="">{bulet}</p>)}
  </div>
  </div>
</Fragment>

<style>
    :global(.cta .cta__title){
      font-size: 1.25rem;
      line-height: 1.2;
      margin-top: 1rem;
    }

    :global(.cta .cta__button button){        
        width: 100%;
        justify-content: center;
    }

          
  .price-card {
    background-color: white;
    border-radius: 3rem;
    box-shadow: 0 0.8rem 4rem 0 rgba(0, 0, 0, 0.05);
    min-height: 25rem;
    min-width: 15rem;
  }
  
</style>
